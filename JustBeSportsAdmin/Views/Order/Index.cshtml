@model IEnumerable<JustBeSports.Core.Models.OrderModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="container my-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Orders Table -->
    <table id="tblOrders" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Total Price</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Actions</th> 
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/orderManagement.js"></script>
}