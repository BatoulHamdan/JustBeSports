@model List<JustBeSports.Core.Models.AdminModel>

@{
    ViewData["Title"] = "Admins";
}

<h2>Admins</h2>

<a class="btn btn-dark mb-3" href="/Admin/Create">Add Admin</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Username</td>
                <td>@admin.Role</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Admin/Edit/@admin.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Admin/Delete/@admin.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
